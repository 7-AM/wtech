         <datasource name="mysql" class="com.platum.restflow.resource.impl.jdbc.JdbcRepository">
            <properties>
                <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/test"/>
                <property name="driverClassName" value="com.mysql.jdbc.Driver" />
                <property name="username" value="root"/>
                <property name="password" value=""/>
            </properties>
        </datasource>

    </datasources>
    <resources>
        <resource name="task" table="task" class="" >
        	<datasource>mysql</datasource>
            <idProperty>id</idProperty>
            <generateCrud>true</generateCrud>
            <internal>false</internal>
            <idAutoGenerated>true</idAutoGenerated>
            <properties>
                <property name="id" >
                    <type>integer</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>false</required>
                </property>
                <property name="description">
                    <type>string</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>false</required>
                </property>
                <property name="state">
                    <type>integer</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>false</required>
                </property>
                <property name="creation_date">
                    <type>date</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>false</required>
                </property>
            </properties>
        </resource>

    </resources>
